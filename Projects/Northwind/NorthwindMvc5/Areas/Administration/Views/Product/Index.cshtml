@model IEnumerable<NorthwindMvc5.Areas.Administration.Models.ProductModel>

@using NorthwindMvc5.Resources

@{
    ViewBag.Title = ProductResource.Title;
}

<h2>@ProductResource.Index</h2>

<p>
    @Html.ActionLink(ProductResource.CreateNew, "Create")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupplierID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discontinued)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @(item.Discontinued == true ? "Yes" : "No")
        </td>
        <td>
            @Html.ActionLink(ProductResource.Edit, "Edit", new { id = item.ProductID }) |
            @Html.ActionLink(ProductResource.Details, "Details", new { id = item.ProductID }) |
            @Html.ActionLink(ProductResource.Delete, "Delete", new { id = item.ProductID })
        </td>
    </tr>
}

</table>
