@model NorthwindMvc5.Areas.Administration.Models.CategoryModel

@using NorthwindMvc5.Resources;

@{
    ViewBag.Title = CategoryResource.Details;
}

<h2>@CategoryResource.Details</h2>

<div>
    <h4>@CategoryResource.Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink(CategoryResource.Edit, "Edit", new { id = Model.CategoryID }) |
    @Html.ActionLink(CategoryResource.BackToList, "Index")
</p>

<h2>@CategoryResource.UploadPicture</h2>

<div>
    @using (Html.BeginForm("Upload", "Category", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.CategoryID" />

        <div>
            <input type="file" name="upload" />
        </div>
        
        <br />
        
        <button type="submit" class="btn btn-primary">@CategoryResource.Upload</button>
    }
</div>
