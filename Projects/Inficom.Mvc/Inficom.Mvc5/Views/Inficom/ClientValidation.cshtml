@model Inficom.Mvc5.Models.Album

@{
    /**/

    /**/

    ViewBag.Title = "ClientValidation";
}

<h2>ClientValidation</h2>
@using (Ajax.BeginForm("ClientValidation", "Inficom",
     new AjaxOptions
     {
         HttpMethod = "POST",
         LoadingElementId = "ajax-loader",

     }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Album</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("autocomplete", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*<input type="text" name="q" data-autocomplete-source="@Url.Action("QuickSearch", "Inficom")" />*@
                @Html.TextBox("Zoek", "", new { @class = "form-control", data_autocomplete_source = @Url.Action("QuickSearch", "Inficom") })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GenreId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GenreId, new { htmlAttributes = new { @class = "form-control", name = "q", data_autocomplete_source = "@Url.Action('QuickSearch', 'Home')" } })
                @Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/site")
}
